    <td><%=link_to(staff_position.staff_type.name,
                   staff_position_path(staff_position))%></td>
  <% end -%>

  <% if user_is_authed && @user.has_skill_cached?("Webmaster") %>
     <%mftable('Vacantes',
               StaffPosition.unassigned.find(
